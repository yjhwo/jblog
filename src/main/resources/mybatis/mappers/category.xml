<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

	<!-- 회원가입 시 카테고리 생성 -->
	<insert id="create" parameterType="categoryvo">
		<![CDATA[
			INSERT INTO category VALUES(null,#{blog_id},#{name},#{description},#{post_count})
		]]>
	</insert>

	<!-- 카테고리 목록 가져오기 -->
	<select id="selectList" resultType="categoryvo" parameterType="string">
		<![CDATA[
			SELECT category_id,blog_id,name,description,post_count FROM category
		]]>
	</select>

</mapper>